<div class="d-flex justify-content-center h-100">
  <%= form_with(model: article, class: "w-25 mt-5") do |form| %>
    <% if article.errors.any? %>
      <div style="color: red">
        <h2><%= pluralize(article.errors.count, "error") %> prohibited this article from being saved:</h2>

        <ul>
          <% article.errors.each do |error| %>
            <li><%= error.full_message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="form-outline mb-2">
      <%= form.label :title, style: "display: block", class: "form-label" %>
      <%= form.text_field :title, class: "form-control" %>
    </div>

    <div class="form-outline mb-2">
      <%= form.label :descri, style: "display: block", class: "form-label" %>
      <%= form.text_field :descri, class: "form-control" %>
    </div>

    <div class="form-outline mb-2">
      <%= form.label :body, style: "display: block", class: "form-label" %>
      <%= form.text_area :body, class: "form-control" %>
    </div>

    <div class="row mb-4">
      <div class="d-flex justify-content-center">
        <%= form.submit class: "btn btn-primary" %>
      </div>
    </div>
  <% end %>
</div>