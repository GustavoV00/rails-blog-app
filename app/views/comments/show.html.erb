<%= render "layouts/navbar" %>

<div class="row m-4 d-flex justify-content-center">
  <div class="col-sm-6">
    <div class="card mt-4">
      <div class="card-body">
        <h5 class="card-title text-center">Comment: <%= @comment.comment %></h5>
        <h5 class="card-title text-center">Article Name: <%= Article.find(@comment.article_id).title %></h5>
        <h5 class="card-title text-center">Comment Id: <%= @comment.id %></h5>
        <div class="d-flex justify-content-evenly">
            <%= link_to "Show comment", @comment, class: "btn btn-primary" %>

            <% if current_user %>
              <% if current_user.email == "admin@admin" %>
                <%= link_to "Edit comment", edit_comment_path(@comment), class: "btn btn-primary" %>
                <%= button_to "Destroy comment", @comment, method: :delete, class: "btn btn-primary" %>
              <% end %>
            <% end %>
        </div>
      </div>
    </div>
    <div class="mt-3">
      <%= link_to "New comment", new_comment_path(@comment), class: "btn btn-primary" %>
    </div>
  </div>
</div>
