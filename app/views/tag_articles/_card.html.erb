<div class="row m-4">
  <% @tag_articles.each do |tag_article| %>
    <div class="col-sm-6">
      <div class="card mt-4">
        <div class="card-body">
          <h5 class="card-title text-center">TagArticle: <%= tag_article.id %></h5>
          <div class="d-flex justify-content-evenly">
              <%= link_to "Show tag_article", tag_article, class: "btn btn-primary" %>

              <% if current_user %>
                <% if current_user.email == "admin@admin" %>
                  <%= link_to "Edit tag_article", edit_tag_article_path(tag_article), class: "btn btn-primary" %>
                  <%= button_to "Destroy tag_article", tag_article, method: :delete, class: "btn btn-primary" %>
                <% end %>
              <% end %>

          </div>
        </div>
      </div>
    </div>
  <% end %>
  <div class="mt-3">
    <%= link_to "New Tag_Article", new_tag_article_path(@tag_article), class: "btn btn-primary" %>
  </div>
</div>